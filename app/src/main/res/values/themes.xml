<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AppUnivates" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextoNegrito" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/raleway_bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextoRegular" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/raleway_regular</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextoFino" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/raleway_light</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Botao" parent="ThemeOverlay.AppCompat">
        <item name="fontFamily">@font/raleway_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="backgroundColor">#5D82DF</item>

    </style>
</resources>